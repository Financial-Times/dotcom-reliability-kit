{
  "name": "dotcom-reliability-kit",
  "version": "0.0.0",
  "private": true,
  "description": "A well tested suite of tools designed to help FT.com applications be more reliable and measurable.",
  "repository": {
    "type": "git",
    "url": "https://github.com/Financial-Times/dotcom-reliability-kit.git"
  },
  "homepage": "https://github.com/Financial-Times/dotcom-reliability-kit",
  "bugs": "https://github.com/Financial-Times/dotcom-reliability-kit/issues",
  "license": "MIT",
  "workspaces": [
    "examples/*",
    "logos",
    "packages/*"
  ],
  "scripts": {
    "build:logos": "npm run build -w logos",
    "create-package": "./scripts/create-package.js",
    "lint": "npm run lint:eslint && npm run lint:tsc",
    "lint:eslint": "eslint .",
    "lint:tsc": "tsc --noEmit --project ./jsconfig.json",
    "test": "jest --silent",
    "prepare": "husky install",
    "postinstall": "npm run build:logos"
  },
  "devDependencies": {
    "@babel/core": "^7.19.0",
    "@babel/eslint-parser": "^7.18.9",
    "@commitlint/cli": "^17.1.2",
    "@commitlint/config-conventional": "^17.1.0",
    "@financial-times/eslint-config-next": "^5.0.0",
    "@types/jest": "^29.0.0",
    "eslint": "^8.23.0",
    "eslint-plugin-jsdoc": "^39.3.6",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^8.0.1",
    "jest": "^29.0.2",
    "lint-staged": "^13.0.3",
    "prettier": "^2.7.1",
    "release-please": "^14.5.0",
    "typescript": "^4.8.3"
  },
  "engines": {
    "node": "14.x || 16.x || 18.x",
    "npm": "7.x || 8.x"
  },
  "volta": {
    "node": "16.17.0",
    "npm": "8.17.0"
  },
  "lint-staged": {
    "**/*.js": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}
