{
  "name": "dotcom-reliability-kit",
  "version": "0.0.0",
  "private": true,
  "description": "A well tested suite of tools designed to help FT.com applications be more reliable and measurable.",
  "repository": {
    "type": "git",
    "url": "https://github.com/Financial-Times/dotcom-reliability-kit.git"
  },
  "homepage": "https://github.com/Financial-Times/dotcom-reliability-kit",
  "bugs": "https://github.com/Financial-Times/dotcom-reliability-kit/issues",
  "license": "MIT",
  "workspaces": [
    "examples/*",
    "packages/*"
  ],
  "scripts": {
    "create-package": "./scripts/create-package.js",
    "lint": "npm run lint:eslint && npm run lint:tsc",
    "lint:eslint": "eslint .",
    "lint:tsc": "tsc --noEmit --project ./jsconfig.json",
    "test": "jest --silent",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@babel/core": "^7.18.6",
    "@babel/eslint-parser": "^7.18.2",
    "@commitlint/cli": "^17.0.3",
    "@commitlint/config-conventional": "^17.0.3",
    "@financial-times/eslint-config-next": "^4.0.0",
    "@types/jest": "^28.1.4",
    "eslint": "^8.19.0",
    "eslint-plugin-jsdoc": "^39.3.3",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^7.0.4",
    "jest": "^28.1.2",
    "lint-staged": "^13.0.3",
    "node-fetch": "^2.6.7",
    "prettier": "^2.7.1",
    "release-please": "^13.18.7",
    "typescript": "^4.7.4"
  },
  "engines": {
    "node": "14.x || 16.x",
    "npm": "7.x || 8.x"
  },
  "volta": {
    "node": "16.15.0",
    "npm": "8.8.0"
  },
  "lint-staged": {
    "**/*.js": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}
